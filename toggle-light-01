blueprint:
  name: Switch on light
  domain: automation
  input:
    remote_device_id:
      name: Remote device
      selector:
        device:
          integration: tplink
    switch_entity_id:
      name: Switch entity
      selector:
        entity:
          domain: switch
    light_entity_id:
      name: Light entity
      selector:
        entity:
          domain: light
trigger:
- platform: device
  device_id: !input 'remote_device_id'
  entity_id: !input 'switch_entity_id'
  type: turned_on
  domain: switch
action:
- service: light.toggle
  entity_id: !input 'light_entity_id'
