blueprint:
  name: Call service from event (with input descriptions)
  domain: automation 
  input:
    trigger_event: 
      name: Trigger event
      description: Event that will trigger the execution of this automation
    service_to_call: 
      name: Service to call
      description: Service that will be called by this automation
trigger:
  platform: event
  event_type: !placeholder trigger_event
action:
  service: !placeholder service_to_call
